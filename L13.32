# include <stdio.h>

int main()
{
int num , i; // num -- skaitlis
long int reizinajums = 1; // faktorials no 0! = 1

printf("Ievadam veselu skaitli: ");
scanf("%d", &num);

for ( i=1 ; i<=num ; i++ )
{
reizinajums = reizinajums * i;
} // Izvadee ir kljuuda. Labo to!
printf("Skaitlja %d faktorials ir: %ld \n", num, reizinajums);
}
